<h2>Animal: <%= @word.term %></h2>



<h3>Descriptions</h3>

  <% if @word.definitions %>
    <ul>
      <% @word.definitions.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.definition %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no descriptions listed for this animal yet.</p>
  <% end %>


<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="definition_term">Type your description here.</label>
    <input id="definition_term" name="definition_term" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add my description</button>
</form>

