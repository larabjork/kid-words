<h2>Definition: <%= @definition.definition %></h2>
<h3>Word: <%= @definition.word.term %></h3>

<form action="/words/<%= @definition.word_id.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for='def_entry'>Retype your definition</label>
  <input id='def_entry' name='def_entry' type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @definition.word_id.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.word_id.id %>">Back to <%= @definition.word.term %></a>
